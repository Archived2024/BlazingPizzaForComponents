@page "/"

<div> class="main"
<h1>Blazing Pizzas</h1>
<ul class="pizza-cards">

    @if (pizzas != null)
    {
        @foreach (var pizza in pizzas)
        {
            <li style="background-image: url(@pizza.ImageUrl)">
                <div class="pizza-info">
                    <span> Title @pizza.Description</span>
                    <p>@pizza.GetFormattedBasePrice() kr </p>
                   
                </div>
            
            </li>
                    }
    }
    </ul>
</div>

@code {

	private List<PizzaSpecial> pizzas = new();

    protected override async Task OnInitializedAsync()

    {

        pizzas.AddRange(new List<PizzaSpecial>
        {
            new PizzaSpecial { Description = "KLassisk Quattro", BasePrice = 100, ImageUrl = "img/pizzas/salad.jpg" },
            new PizzaSpecial { Description = "Fyra Ostar", BasePrice = 110, ImageUrl = "img/pizzas/cheese.jpg" },
            new PizzaSpecial { Description = "Pauls Favorit Margarita", BasePrice = 190, ImageUrl = "img/pizzas/Margherita.jpg" },
            new PizzaSpecial { Description = "Köttfärs Special", BasePrice = 200, ImageUrl = "img/pizzas/meaty.jpg" },
            new PizzaSpecial { Description = "Svamppizza vego", BasePrice = 110, ImageUrl = "img/pizzas/mushroom.jpg" },
            new PizzaSpecial { Description = "Pepperoni", BasePrice = 190, ImageUrl = "img/pizzas/pperoni.jpg" },
            new PizzaSpecial { Description = "Baconator", BasePrice = 200, ImageUrl = "img/pizzas/bacon.jpg" },

        });

    }
}
		